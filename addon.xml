<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Addon basé sur le travail de Dany Côté pour le plugin vtélé -->
<!-- Addon basé sur le plugin mlbtv -->
<!-- Addon basé sur les excellents concepts et code de IPlayer et 1Channel -->
<!-- Adapté pour nouvel illicoweb du 7 novembre 2013 par Mathieu Arseneault -->
<addon id="plugin.video.illicoweb" name="Illicoweb TV" version="1.3.0" provider-name="mlemelin@gmail.com">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Visionner vos émissions favoris sur illico.tv!</summary>
    <description>Visionner vos émissions favoris sur illico.tv!
    
Il vous suffit de vous connecter avec votre identifiant Espace client de Vidéotron. Vous aurez ainsi accès aux chaînes en direct ou sur demande dont vous êtes membres.</description>
  </extension>
</addon>
